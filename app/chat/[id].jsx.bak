  },
  backButton: {
    marginRight: 10,
  },
  headerTitle: {
    fontSize: 20,
    fontWeight: 'bold',
  },
  profile: {
    alignItems: 'center',
    marginBottom: 30,
  },
  avatar: {
    width: 100,
    height: 100,
    borderRadius: 50,
    marginBottom: 10,
  },
  specialty: {
    fontSize: 18,
    fontWeight: 'bold',
  },
  description: {
    fontSize: 14,
    color: '#555',
    marginBottom: 5,
  },
  details: {
    fontSize: 12,
    color: '#777',
    marginBottom: 3,
  },
  rating: {
    fontSize: 16,
    color: '#ffb400',
  },
  chatPlaceholder: {
